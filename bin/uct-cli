#!/usr/bin/env node

const { Command } = require('commander');
const { Plop, run } = require('plop');
const path = require('path');
const program = new Command();
program.version(require('../package').version);

// 路由:当输入命令init的时候执行这里
program.command('init [targetDir...]').description('初始化').action(require('../lib/init'));
program.command('created [name]').description('新建uct项目').action(require('../lib/created'));
program.command('run [type]').description('运行项目').action(require('../lib/run'));
program.command('plop [config...]').description('plop命令').action(require('../lib/plop'));
program.parse(process.argv);
